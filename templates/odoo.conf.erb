[options]
; This is the password that allows database operations:
admin_passwd = <%= @adminpass %>
db_host = <%= @db_host %>
db_port = <%= @db_port %>
db_user = <%= @db_user %>
db_password = <%= @db_password %>

<% if @addons_path -%>
addons_path = <%= @addons_path %>
<% end -%>
<% if @logfile -%>
logfile = <%= @logfile %>
<% end -%>
<% if @log_level -%>
log_level = <%= @log_level %>
<% end -%>
